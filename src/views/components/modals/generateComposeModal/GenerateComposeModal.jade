.modal-backdrop(data-js-backdrop)
.content(data-js-content)
  button.close(data-js-cancel)
  h2.generate-head Generate Docker-Compose file
  label.version Version
    span(data-js-version)
  .field
    label ReportPortal folder location
    input(title='Enter the path to the folder where ReportPortal data will be storaged',type=text,value='./',data-js-folder-location)
  .section
    p.section-name Mongo DB
    .field
      label Mongo DB location
      select#custom-select
        option(value='local') On a local host
        option(value='separate') On a separate host
    .db-settings.hide
      .block
        .field
          label Mongo host
          input(type=text, value='localhost',data-js-db-host)
        .field
          label Mongo DB name
          input(type=text, value='reportportal',data-js-db-name)
        .field
          label Mongo user
          input(type=text, placeholder='Enter Mongo user',data-js-db-user)
      .block.right
        .field
          label Mongo port
          input(type=text, value='27017',data-js-db-port)
        .field
          label Mongo auth DB name
          input(type=text, value='reportportal',data-js-db-auth-name)
        .field
          label Mongo password
          input(type=text, placeholder='Enter Mongo password',data-js-db-password)
  .section.other
    p.section-name Other parametres
    div
      .block
        .field
          label Gateway
          div
            .radio
              input#fabio(type="radio",data-js-fabio, name="gateway", value="Fabio",checked)
              label(for='fabio') Fabio
            .radio
              input#traefik(type="radio", name="gateway", value="Traefik")
              label(for='traefik') Traefik
        .field
          label Analyzer
          .switcher
            label.rp-switcher-big
              span.turn-on On
              span.turn-off Off
              input#analayzer(type="checkbox" data-js-is-auto-analize, checked)
              .slider
      .block.right.integrate
        .field
          label Integration with BTS
          div
            .integration
              input#jira(type='checkbox',data-js-jira)
              label(for='jira')
              label Jira
            .integration
              input#rally(type='checkbox',data-js-rally)
              label(for='rally')
              label Rally
        .field.session
          label User session live time
          input(type='text', data-js-session,value='86400',maxLength='10', pattern="[0-9]{10}")
  .button-section
    button.cancel(data-js-cancel) Cancel
    button.generate(data-js-generate) Generate file

